<h1>Pizzas!</h1>

<h2>Are you ready to order?</h2>

<ul>
    {{#each pizza}}
    {{#unless this.devoured}}
    {{this.name}}
    <button class="eatMe" data-id={{this.id}} data-state={{this.devoured}}> Eat Me!</button>
    {{/unless}}
    {{/each}}
</ul>

<h2>Pizzas which have been devoured!</h2>

<ul>
  {{#each pizza}}
  {{#if this.devoured}}
  {{this.name}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Pizza</h2>
<form class="create-form">

  <div class="form-group">
    <label for="pizza">Pizza Name:</label>
    <input type="text" id="pizza" name="name">
  </div>

  <div class="form-group">
    <label for="eat">devour?</label><br>
    <input type="radio" name="devour" value="1" checked> Devour!<br>
    <input type="radio" name="devour" value="0"> Not Devoured
  </div>

  <button id="submit" type="submit">Add Pizza</button>
</form>